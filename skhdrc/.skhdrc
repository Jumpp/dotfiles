# ctrl = hyper
# FOCUS WINDOW
ctrl - h : (yabai -m window --focus west || yabai -m window --focus east) || (yabai -m window --swap stack.prev || yabai -m window --swap stack.last)
ctrl - j : (yabai -m window --focus south || yabai -m window --focus north) || (yabai -m window --focus stack.next || yabai -m window --focus stack.first)
ctrl - k : (yabai -m window --focus north || yabai -m window --focus south) || (yabai -m window --focus stack.prev || yabai -m window --focus stack.last)
ctrl - l : (yabai -m window --focus east || yabai -m window --focus west) || (yabai -m window --swap stack.next || yabai -m window --swap stack.first)

# SWAP WINDOW
ctrl + shift - h : (yabai -m window --swap west || yabai -m window --swap east || yabai -m space --rotate 90)
ctrl + shift - j : (yabai -m window --swap south || yabai -m space --rotate 90; yabai -m window --swap south)
ctrl + shift - k : (yabai -m window --swap north || yabai -m space --rotate 90)
ctrl + shift - l : (yabai -m window --swap east || yabai -m window --swap west || yabai -m space --rotate 90)

# move focused window to  workspace
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5

# balance size of windows
ctrl + shift - 0 : yabai -m space --balance

# resize windows
ctrl + shift - w : yabai -m window south --resize top:0:-100 2> /dev/null || yabai -m window --resize top:0:-100
ctrl + shift - a : yabai -m window west --resize right:-100:0 2> /dev/null || yabai -m window --resize right:-100:0
ctrl + shift - s : yabai -m window north --resize bottom:0:100 2> /dev/null || yabai -m window --resize bottom:0:100
ctrl + shift - d : yabai -m window east --resize left:100:0 2> /dev/null || yabai -m window --resize left:100:0#



# close focused window
ctrl - q : yabai -m window --close

# enter fullscreen mode for the focused container
ctrl - m : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
ctrl + shift - m : yabai -m window --toggle native-fullscreen

ctrl - n : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2


# Enable / Disable gaps in current workspace
ctrl - p : yabai -m space --toggle padding; yabai -m space --toggle gap

# Enable / Disable border
ctrl - b : yabai -m config window_border on
ctrl - v : yabai -m config window_border off

# shortcuts
alt + shift - t : open -a iTerm
alt + shift - e : emacs
alt + shift - c : open -a "Visual Studio Code"
alt + shift - y : brew services restart yabai

